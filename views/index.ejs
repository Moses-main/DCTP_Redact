<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redact Text</title>
    <link rel="stylesheet" href="styles.css" />
    <!-- Font Awesome Icons -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <!-- <a class="navbar-brand" href="#">Logo</a> -->
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/result">Result</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <h1 class="heading">Redact Text</h1>
          <form action="/redact" method="POST" class="form">
            <div class="form-group">
              <label for="text" class="label">Text to Redact:</label>
              <textarea
                class="textarea"
                name="text"
                id="text"
                rows="8"
                placeholder="Enter text to redact"
              ></textarea>
            </div>
            <div class="form-group">
              <label for="words" class="label">Words to Redact:</label>
              <input
                type="text"
                class="input"
                name="words"
                id="words"
                placeholder="Words to redact (separated by space)"
              />
            </div>
            <div class="form-group">
              <label for="replacement" class="label"
                >Replacement Character/Word:</label
              >
              <input
                type="text"
                class="input"
                name="replacement"
                id="replacement"
                placeholder="Enter replacement character/word"
              />
            </div>
            <button type="submit" class="button">
              <i class="fas fa-eye-slash"></i> Redact Now
            </button>
          </form>
        </div>
      </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
